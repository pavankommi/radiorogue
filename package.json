{
  "name": "radiorogue-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "RadioRogue monorepo - AI-powered news aggregation platform",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "build": "npm run build:frontend && npm run build:backend",
    "lint:frontend": "npm run lint --workspace=apps/frontend",
    "start:frontend": "npm run start --workspace=apps/frontend",
    "start:backend": "npm run start --workspace=apps/backend",
    "clean": "rm -rf apps/*/node_modules apps/*/.next node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pavankommi/radiorogue.git"
  },
  "keywords": [
    "monorepo",
    "news",
    "ai",
    "aggregation",
    "nextjs",
    "express"
  ],
  "author": "Pavan Kommi",
  "license": "ISC"
}
